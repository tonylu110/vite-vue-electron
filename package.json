{
  "name": "vite-vue-electron",
  "private": true,
  "main": "electron/main.js",
  "version": "0.0.1",
  "type": "commonjs",
  "author": "Anthony Lu <luxiaoyu1848367623@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:serve": "concurrently -k \"pnpm dev\" \"pnpm electron\"",
    "electron:build": "vite build && electron-builder",
    "electron": "wait-on tcp:5200 && cross-env NODE_ENV=development electron ."
  },
  "dependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.3",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "typescript": "^4.6.4",
    "vite": "^3.0.7",
    "vue-tsc": "^0.39.5",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "cn.org.uyou.electron",
    "productName": "ElectronApp",
    "copyright": "Copyright Â© 2022 Anthony Lu",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}